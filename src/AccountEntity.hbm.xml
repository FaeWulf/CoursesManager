<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.model.accountDB" table="account" schema="coursesmanager">
        <id name="id">
            <column name="Id" sql-type="int"/>
        </id>
        <property name="username">
            <column name="Username" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="Password" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="fullName">
            <column name="FullName" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="birth">
            <column name="Birth" sql-type="date"/>
        </property>
        <property name="accountType">
            <column name="AccountType" sql-type="int"/>
        </property>
        <property name="birthPlace">
            <column name="BirthPlace" sql-type="varchar(255)"/>
        </property>
        <property name="livePlace">
            <column name="LivePlace" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>